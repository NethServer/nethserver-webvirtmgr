import os
import sys
from subprocess import Popen, PIPE

if __name__ == "__main__":
    os.environ.setdefault("DJANGO_SETTINGS_MODULE", "webvirtmgr.settings")

    from django.contrib.auth.models import User
    from django.core.exceptions import ObjectDoesNotExist

    (username, stderr) = Popen(["/sbin/e-smith/config",
                            "getprop",
                            "webvirtmgr",
                            "User"], stdout = PIPE).communicate()

    (password, stderr) = Popen(["/sbin/e-smith/config",
                                "getprop",
                                "webvirtmgr",
                                "Password"], stdout = PIPE).communicate()
    email = ""

    username, password = username.strip(), password.strip()

    try:
        user = User.objects.get(username__exact = username)
        user.set_password(password)
        user.save()
    except ObjectDoesNotExist:
        user = User.objects.create_user(username, email, password)
        user.is_staff = True
        user.save()
